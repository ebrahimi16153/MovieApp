<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/crayola</item>
        <item name="colorPrimaryVariant">@color/chineseBlack</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/crayola</item>
        <item name="colorSecondaryVariant">@color/crayola</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--  Customize your theme here.  -->
        <!--        background color for all element-->
        <item name="android:windowBackground">@color/chineseBlack</item>
    </style>


    <!--Custom style-->
    <!-- TextView -->
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <!--inputTextView-->
    <style name="CustomFiledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="hintTextColor">@color/crayola</item>
        <item name="boxStrokeColor">@color/crayola</item>
        <item name="boxBackgroundColor">@color/gunmetal</item>
        <item name="startIconTint">@color/philippineSilver</item>

    </style>

    <!-- shapedImageViewCorner-->
    <style name="imageViewCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20mdp</item>
    </style>


    <style name="Theme.MovieApp" parent="Base.Theme.MovieApp" />
</resources>