<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_5mdp"
    android:paddingVertical="@dimen/_10mdp">

    <!--poster-->
    <androidx.cardview.widget.CardView
        android:id="@+id/posterCardView"
        android:layout_width="@dimen/_120mdp"
        android:layout_height="@dimen/_180mdp"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/_5mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/moviePoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/lastMovies" />


    </androidx.cardview.widget.CardView>

    <!--Name-->
    <TextView
        android:id="@+id/titleName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:text="@string/lastMovies"
        android:textColor="@color/philippineSilver"
        android:textSize="@dimen/_13font_mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/posterCardView"
        app:layout_constraintTop_toTopOf="parent" />

    <!--rating-->
    <TextView
        android:id="@+id/rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:drawablePadding="@dimen/_5mdp"
        android:fontFamily="sans-serif-light"
        android:text="@string/lastMovies"
        android:textColor="@color/philippineSilver"
        android:textSize="@dimen/_13font_mdp"
        app:drawableStartCompat="@drawable/ic_round_star_24"
        app:drawableTint="@color/philippineSilver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/posterCardView"
        app:layout_constraintTop_toBottomOf="@+id/titleName" />


    <!--country-->
    <TextView
        android:id="@+id/country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:drawablePadding="@dimen/_5mdp"
        android:fontFamily="sans-serif-light"
        android:text="@string/lastMovies"
        android:textColor="@color/philippineSilver"
        android:textSize="@dimen/_13font_mdp"
        app:drawableStartCompat="@drawable/ic_round_language_24"
        app:drawableTint="@color/philippineSilver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/posterCardView"
        app:layout_constraintTop_toBottomOf="@+id/rating" />


    <!--year-->
    <TextView
        android:id="@+id/publishYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:drawablePadding="@dimen/_5mdp"
        android:fontFamily="sans-serif-light"
        android:text="@string/lastMovies"
        android:textColor="@color/philippineSilver"
        android:textSize="@dimen/_13font_mdp"
        app:drawableStartCompat="@drawable/ic_round_calendar_today_24"
        app:drawableTint="@color/philippineSilver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/posterCardView"
        app:layout_constraintTop_toBottomOf="@+id/country" />


    <!--moreInfo-->
    <TextView
        android:id="@+id/moreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:drawablePadding="@dimen/_5mdp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/moreInfo"
        android:textColor="@color/scarlet"
        android:textSize="@dimen/_11font_mdp"
        app:drawableEndCompat="@drawable/ic_round_chevron_right_24"
        app:drawableTint="@color/scarlet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/posterCardView"
        app:layout_constraintTop_toBottomOf="@+id/publishYear" />


</androidx.constraintlayout.widget.ConstraintLayout>